
<div class="background">
  <div class="container center-block">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="form">
          <h2 class="form-headline">Log in</h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder:"Name", class:"form-item" %>
            </div>

            <div class="field">
              <%= f.password_field :password, autocomplete: "current-password", placeholder:"Password", class:"form-item" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

            <div class="actions field">
              <%= f.submit "Log in", class:"btn btn-success btn-block" %>
            </div>
          <% end %>
          <div class="field">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


