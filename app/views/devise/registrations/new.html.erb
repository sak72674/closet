<div class="background">
  <div class="container center-block">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="form">
          <h2 class="form-headline">Sign up</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.email_field :name, autofocus: true, autocomplete: "name", placeholder:"Name", class:"form-item" %>
          </div>

          <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", class:"form-item" %>
          </div>

          <div class="field">
            <%= f.password_field :password, autocomplete: "new-password", placeholder:"Password(6 characters minimum)", class:"form-item" %>
          </div>

          <div class="field">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Password Confirmation", class:"form-item" %>
          </div>

          <div class="actions field">
            <%= f.submit "Sign up", class:"btn btn-primary btn-block" %>
          </div>
          <% end %>
          <div class="field">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
