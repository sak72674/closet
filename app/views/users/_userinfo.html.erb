<%= attachment_image_tag user, :profile_image, :fill, 250, 250, fallback: "no_image.jpg", size:'250x250', class: "image-circle" %>
	<div class="user-info">
		<%= user.name %>
		<%= user.biography %>
		<% if user.id == current_user.id %>
			<%= link_to 'Edit Profile', edit_user_path(user.id), class:"btn btn-default btn-block" %>
		<% end %>
	</div>
